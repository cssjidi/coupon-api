{{ header }}
<div id="product-product" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row new-product-info">
    <div class="col col-sm-12 col-lg-4 col-md-6">
      {% if thumb %}
        <img width="100%" src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
      {% endif %}
    </div>
      <div class="col col-sm-12 col-lg-8 col-md-6 right">
        <h1>{{ name }}</h1>
        <div class="list-group">
          <a href="#" class="list-group-item active">
            <h4 class="list-group-item-heading">{{ coupon_click_url }}</h4>
          </a>
        </div>
      </div>
      </div>
  <div class="panel panel-default">
    <div class="panel-heading">{{ tab_description }}</div>
    <div class="panel-body">
      {% if images %}
        {% for image in images %}
          <img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
{{ footer }} 
